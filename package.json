{
  "description": "Web component mixin to support microdata properties.",
  "keywords": [
    "polymer",
    "polymer2",
    "lit",
    "lit-element",
    "microdata",
    "mixin",
    "html"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rgladwell/wcs-microdata.git"
  },
  "homepage": "https://github.com/rgladwell/wcs-microdata",
  "name": "wcs-microdata",
  "version": "0.4.1",
  "main": "wcs-microdata.js",
  "license": "MIT",
  "author": {
    "name": "Ricardo Gladwell",
    "email": "ricardo@gladwell.me",
    "url": "https://gladwell.me/"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^0.19.1",
    "@open-wc/eslint-config": "^2.0.2",
    "@open-wc/prettier-config": "^0.1.13",
    "@open-wc/testing": "^2.5.1",
    "@open-wc/testing-karma": "^3.2.30",
    "deepmerge": "^4.2.2",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.0.10",
    "lint-staged": "^10.0.0",
    "lit-element": "^2.2.1",
    "mocha": "^7.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.29.0"
  },
  "resolutions": {
    "inherits": "2.0.3",
    "samsam": "1.1.3",
    "supports-color": "3.1.2",
    "type-detect": "1.0.0"
  },
  "dependencies": {
    "microtesia.js": "^0.1.2"
  },
  "scripts": {
    "test": "npm run lint && karma start --coverage",
    "start": "npm run build cd dist && es-dev-server --open",
    "lint:eslint": "eslint --ext .js . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --no-semi --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --no-semi --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "build": "rimraf dist && rollup -c rollup.config.js"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "globals": {
      "parseMicrodata": "readonly"
    },
    "rules": {
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "prettier": "@open-wc/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --no-semi --write",
      "git add"
    ]
  }
}
